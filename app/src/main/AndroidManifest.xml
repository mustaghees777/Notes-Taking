<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simplenotes">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.simplenotes.NoteActivity"
            android:exported="true"
            android:parentActivityName="com.example.simplenotes.NotesListActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.simplenotes.NotesListActivity"
            android:label="@string/launcher_title"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.simplenotes.SettingsActivity"
            android:parentActivityName="com.example.simplenotes.NotesListActivity" />

        <activity
            android:name="com.example.simplenotes.TaskerActionGetNoteActivity"
            android:exported="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/get_note"
            android:theme="@style/TaskerInputTheme">
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.EDIT_SETTING" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.simplenotes.TaskerActionSetNoteActivity"
            android:exported="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/set_note"
            android:theme="@style/TaskerInputTheme">
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.EDIT_SETTING" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.simplenotes.TaskerEventNoteUpdateActivity"
            android:exported="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/note_change"
            android:theme="@style/TaskerInputTheme">
            <intent-filter>
                <action android:name="net.dinglisch.android.tasker.ACTION_EDIT_EVENT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
